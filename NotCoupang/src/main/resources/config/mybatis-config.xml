<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<properties resource="config/db.properties"/>
	
	<settings>
	<setting name="mapUnderscoreToCamelCase" value="true"/>
	<setting name="jdbcTypeForNull" value="NULL"/>	<!-- sql데이터 없으면 null 넣어줌 -->
	<setting name="cacheEnabled" value="false"/><!-- 캐쉬 없애는거 -->
	<setting name="localCacheScope" value="STATEMENT"/>
	</settings>
	
	<typeAliases>
		<typeAlias alias="member" type="com.Fyou.vo.MemberVO"/>
		<!-- <typeAlias alias="goods" type="com.Fyou.vo.GoodsVO"/> -->
		<!-- <typeAlias alias="reply" type="com.Fyou.vo.ReplyVO"/> -->
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/Fyou/mapper/MemberMapper.xml" />
		<!-- <mapper resource="com/Fyou/mapper/GoodsMapper.xml" /> -->
		<!-- <mapper resource="com/Fyou/mapper/ReplyMapper.xml" /> -->		
	</mappers>
</configuration>